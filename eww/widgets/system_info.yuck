(defwidget uptime_widget []
  (box
    :orientation "horizontal"
    :class "clip-border"
    (label :text "[TIME_AWAKE] ${uptime}" :halign "center" :class "bold")))

(defwidget cpu_temp_widget []
  (box
    :orientation "horizontal"
    :class "clip-border"
    (label :text "[CORE_TEMP] ${cpu_temp}°C" :style cpu_color :class "bold")))

(defwidget gpu_temp_widget []
  (box
    :orientation "horizontal"
    :class "clip-border"
    (label :text "[GPU_TEMP] ${gpu_temp}°C" :class "bold")))

(defwidget power_widget []
  (box
    :orientation "horizontal"
    :class "clip-border"
    (label :text "[GPU_POWER] ${power_draw}W" :class "bold")))