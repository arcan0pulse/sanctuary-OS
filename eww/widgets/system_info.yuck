(defwidget cpu_widget []
  (box
    :orientation "vertical"
    :class "clip-border"
    :height 50
    (label :text "[CPU_LOAD]" :valign "start" :class "system_label_top bold")
    (progress :value cpu_usage :halign "center" :valign "center" :orientation "vertical" :flipped true :vexpand false :height 20)
    (label :text "${cpu_usage}%" :valign "end" :class "system_label_bottom")))

(defwidget ram_widget []
  (box
    :orientation "vertical"
    :class "clip-border"
    :height 50
    (label :text "[MEMORY_LOAD]" :valign "start" :class "system_label_top bold")
    (progress :value ram_usage :halign "center" :valign "center" :orientation "vertical" :flipped true :vexpand false)
